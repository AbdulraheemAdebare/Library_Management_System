@using Library_Management_System.Dto.Book;
@model IEnumerable<LibraryNotificationDto>;

@{
    ViewData["Title"] = "Notification";
    ViewData["SubTitle"] = "Notifications";
}


<div class="page-header">
    <h3 class="page-title"> Book</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">@ViewData["Title"]</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["SubTitle"]</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@ViewData["Title"]</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                @*
                                <th> FullName </th> *@
                                <th> Description </th>
                                <th> Message </th>
                                <th> Status </th>
                                <th> Action </th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        @*   <td> @item.FullName</td> *@
                                        <td>@item.Description</td>
                                        <td>@item.Message</td>
                                        <td>
                                            @if (item.IsRead)
                                            {
                                                <label class="badge badge-gradient-success">Read</label>
                                            }
                                            else
                                            {
                                                <label class="badge badge-gradient-danger">Un-Read</label>
                                            }

                                        </td>
                                        <td>
                                            <a href="@Url.Action("NotificationDetail",new {id = item.Id})" class="btn btn-gradient-dark btn-icon-text btn-sm">
                                                View <i class="mdi mdi-file-check btn-icon-append"></i>
                                            </a>
                                        </td>
                                    </tr>

                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center"> No data found</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
